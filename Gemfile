source 'https://rubygems.org'
git_source(:github) { |repo| "https://github.com/#{repo}.git" }

# OpenAI library for Ruby
gem 'ruby-openai', '~> 4.0.0'
# Powerful interactive command line prompt.
gem 'tty-prompt', '~> 0.23.1'
# Terminal spinner for tasks that have non-deterministic time frame
gem 'tty-spinner', '~> 0.9.3'

group :test do
  # Ruby testing framework
  gem 'rspec', '~> 3.9'
  # Format RSpec output for CircleCI
  gem 'rspec_junit_formatter', '~> 0.4'
  # Static code analyzer, based on the community Ruby style guide
  gem 'rubocop', '~> 1.50.2'
  # RSpec-specific analysis for your projects
  gem 'rubocop-rspec', '~> 2.20.0'
  # Generate test coverage statistics
  gem 'simplecov', '0.17'
end
